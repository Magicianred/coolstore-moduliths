@page "/"

@using CoolStore.UI.Blazor.Services
@using CoolStore.UI.Blazor.I18nText
@inject CoolStoreService CoolStoreService
@inject Toolbelt.Blazor.I18nText.I18nText I18nText

@if (products == null)
{
    <p><em>Loading products...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>@Text.HomePage_Name</th>
                <th>@Text.HomePage_Category</th>
                <th>@Text.HomePage_InventoryLocation</th>
                <th>@Text.HomePage_Price</th>
                <th>@Text.HomePage_Image</th>
                <th>@Text.HomePage_Description</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in products)
            {
                <tr>
                    <td>@product.Name</td>
                    <td>@product.CategoryName</td>
                    <td>@product.InventoryLocation</td>
                    <td>@product.Price</td>
                    <td>@product.ImageUrl</td>
                    <td>@product.Description</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private MyText Text = new MyText();
    private List<ICatalogProductDto> products;
    protected override async Task OnInitializedAsync()
    {
        Text = await I18nText.GetTextTableAsync<MyText>(this);
        products = await CoolStoreService.GetProducts();
    }
}
